<h2>Q <em>YOUR</em> music!</h2>
<div class='col-md-12'>
<% unless signed_in? %>
	<%= image_tag 'music_note.png' %>
<% else %>
	<br>
	<%= form_tag("/add_song", method: "post") do %>
		<div class="form-group">
  			<%= label_tag(:title, "Find a tune... (by title or artist)", ) %>
  			<%= text_field_tag(:title, "", class: "form-control") %>
  			<%= submit_tag("   Q it!   ", class: "btn btn-primary") %>
  		</div>
	<% end %>
	<br>
	<h3>My Q!</h3>
	<div class='col-md-6'>
    	<table class='table table-striped'>
			<tr>
				<th>Title</th>
				<th>Status</th>
			</tr>
   			<% @current_user.songs.each do |song| %>
      			<tr>
        			<td><%= song.title %></td>
	        		<td><%= song.status %></td>
    	  		</tr>  
    		<% end %>
    	</table>
    </div>
<% end %>
</div>

<script type="text/javascript" language="JavaScript">
document.getElementById('title').focus();
</script>